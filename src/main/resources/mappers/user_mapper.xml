<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="triple_stack.route_in_backend.mapper.UserMapper">
    <resultMap id="UserResultMap" type="triple_stack.route_in_backend.entity.User">
        <id property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="provider" column="provider"/>
        <result property="providerUserId" column="provider_user_id"/>
        <result property="profileImg" column="profile_img"/>
        <result property="gender" column="gender"/>
        <result property="address" column="address"/>
        <result property="birthYear" column="birth_year"/>
        <result property="height" column="height"/>
        <result property="weight" column="weight"/>
        <result property="currentRun" column="current_run"/>
        <result property="weeklyRun" column="weekly_run"/>
        <result property="createDt" column="create_dt"/>
        <result property="updateDt" column="update_dt"/>
        <result property="status" column="status"/>
        <result property="withdrawDt" column="withdraw_dt"/>
        <result property="deleteDt" column="delete_dt"/>
        <result property="roleId" column="role_id"/>
    </resultMap>

    <select id="getUserByUsername" resultMap="UserResultMap">
        select
            *
        from
            user_tb
        where
            username = #{username};
    </select>
    <select id="getUserByUserID" resultMap="UserResultMap">
        select
            *
        from
            user_tb
        where
            user_id = #{userId};
    </select>
</mapper>